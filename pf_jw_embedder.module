		'autostart' => FALSE,
	);*/
	  $settings = array(
  			'items' => $items, 
  			'html5' => $html5,
  			'width' => $instance['widget']['settings']['width'],
  			'height' => $instance['widget']['settings']['height'],
	  
  			'backcolor' => $backcolor,
  			'backcolor_rgb' => hex2RGB('#' . $backcolor, TRUE),
