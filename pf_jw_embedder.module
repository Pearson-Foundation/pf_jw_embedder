	  $backcolor = $instance['widget']['settings']['backcolor'];
	  $screencolor = $instance['widget']['settings']['screencolor'];
	  $frontcolor = $instance['widget']['settings']['frontcolor'];
	  $lightcolor = $instance['widget']['settings']['lightcolor'];
	  /*
	$settings = array(
