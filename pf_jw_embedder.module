/**
 * Implementation of hook_field_is_empty().
 * */
function pf_jw_embedder_field_is_empty($item, $field ) {
  if ($field['type'] == 'pf_jw_embedder') {
    if (empty($item['title']) || empty($item['media_video_path'])) {
      return TRUE;
    }
  }
  return FALSE;
}

